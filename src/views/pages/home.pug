extends ../layout/layout.default.pug

block variables
  - var title = 'Jacopo Marrone'
  - var prefix = FILE_PREFIX
  //- var extraCSS = [FILE_PREFIX+'css/carousel.css']
  - var imgPrefixUrl = IMG_PREFIX_URL
  - var bodyClassName = 'home'

  - 
    const works = [
      {
        name: 'Galleria',
        image: "/images/works/galleria.jpg",
        caption: 'Photographer personal showreel',
        description: '<p>Design gives value for what matter for a photographer, his/her photos. Website act only as a background layer that doesn’t t fight for user attention. After user browsed the photographer works can easily contact the photographer with a form where its possible to type a message.</p>',
        permalink: '#'
      },
      {
        name: 'Color Compare',
        image: "/images/works/color-compare.jpg",
        caption: 'Lorem ipsum dolor sit amet',
        description: '<p>A tool for who works everyday with design and color codes ( RGB, HEX, HSL ) that need a simple way to lay down two or more colors next to each other to easily find the “sweet” combination. Nothing less nothing more.</p>',
        permalink: '#'
      },
      {
        name: 'Fli',
        image: "/images/works/fli.jpg",
        caption: 'Artist artwork presentation',
        description: '<p>Cinematic sequence landing page used to create hype on product launch. Fli wanted to give strength to his artwork presentation at an important artistic international event providing a countdown to the day of the event.</p>',
        permalink: '#'
      },
      {
        name: 'Smile',
        image: "/images/works/fli.jpg",
        caption: 'Storytelling sequence',
        description: '<p>"Smile is what makes humans humans. Smiling on a daily basis help humans stay healty". This webpage aims to push the viewer to look for situations in everyday life that bring a smile to his or her face.</p>',
        permalink: '#'
      },
    ];

block content
  .home-grid
    .home-grid__box.home-grid__box--no-bg.home-grid__box-different.home-grid-animate.animate-from-left
      span Jacopo Marrone
    .home-grid__box.home-grid-animate(data-js="works-toggler")
      span Works
    .home-grid__box.home-grid-animate(data-js="contact-toggler")
      span Contact Me

  .floating-panel.works
    .floating-panel__inner
      .floating-panel__header
        .works__headline
          span Works
        .works__close-panel(data-js="works-toggler" data-icon="arrow-left")
          span Close
      .floating-panel__content
        .works__list
          each work in works
            .works__item.work
              .work__header
                h2.work__title= work.name
                span.work__caption= work.caption
              .work__content
                img.work__image(src= work.image)
                .work__description
                  | !{work.description}
            .works__item-separator.works__item-separator--full-width(data-shape-divider="arrow-down")
          .works__list-footer
            .works__close-panel-footer(data-js="works-toggler")
              span Close

  .floating-panel.contact
    .floating-panel__inner
      .floating-panel__header
        .contact__headline
          span Contact Me
        .floating-panel__close-panel(data-js="contact-toggler" data-icon="arrow-left")
          span Close
      .floating-panel__content
        form.contact__form#contact-form
          .contact__form-content
            .contact__form-content-inner
              .contact__form-content-item
                .contact__form-content-item-inner
                  .contact__form-content-item-label
                    span Name
                  .contact__form-content-item-input
                    input.contact__form-content-item-input-text(type="text")
              .contact__form-content-item
                .contact__form-content-item-inner
                  .contact__form-content-item-label
                    span Email
                  .contact__form-content-item-input
                    input.contact__form-content-item-input-text(type="text")
              .contact__form-content-item
                .contact__form-content-item-inner
                  .contact__form-content-item-label
                    span Message
                  .contact__form-content-item-input
                    textarea.contact__form-content-item-input-text
              .contact__form-content-item
                .contact__form-content-item-inner
                  .contact__form-content-item-label
                    span
                  .contact__form-content-item-input
                    button.contact__form-content-item-input-button.btn(type="submit")
                    span Send
          .contact__form-footer
            span
              | Lorem ipsum dolor sit amet, consectetur adipisicing elit.
              | Voluptatum, quisquam, quod, quis, quia, quaerat, quos,
              | voluptates, voluptatibus, voluptas, voluptate,
              | voluptatum, quisquam, quod, quis, quia, quaerat, quos,
              | voluptates, volupt
